<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            tools:context=".ui.main.home.views.LuckyFaceFragment">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dp5"
                app:cardUseCompatPadding="true">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_countryHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="@string/lucky_face_in_your_country"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp18" />

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_countryProfile"
                        android:layout_width="@dimen/dp120"
                        android:layout_height="@dimen/dp120"
                        android:layout_below="@+id/tv_countryHead"
                        android:layout_margin="@dimen/dp10"
                        android:src="@drawable/profile" />

                <TextView
                        android:id="@+id/tv_countryUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_countryHead"
                        android:layout_marginTop="@dimen/dp25"
                        android:layout_toEndOf="@+id/iv_countryProfile"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Shubham"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />

                <TextView
                        android:id="@+id/tv_CountryState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_countryUserName"
                        android:layout_toEndOf="@+id/iv_countryProfile"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Punjab"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />

                <TextView
                        android:id="@+id/tv_pincode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_CountryState"
                        android:layout_toEndOf="@+id/iv_countryProfile"
                        android:fontFamily="@font/poppins_medium"
                        android:text="160062"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp30"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_next" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/iv_countryProfile"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp10"
                        android:fontFamily="@font/poppins_medium"
                        android:text="49 Followers"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dp5"
                app:cardUseCompatPadding="true">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_stateHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Lucky Face in your state"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp18" />

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_stateProfile"
                        android:layout_width="@dimen/dp120"
                        android:layout_height="@dimen/dp120"
                        android:layout_below="@+id/tv_stateHead"
                        android:layout_margin="@dimen/dp10"
                        android:src="@drawable/profile" />

                <TextView
                        android:id="@+id/tv_stateUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_stateHead"
                        android:layout_marginTop="@dimen/dp25"
                        android:layout_toEndOf="@+id/iv_stateProfile"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Shubham"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />

                <TextView
                        android:id="@+id/tv_stateState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_stateUserName"
                        android:layout_toEndOf="@+id/iv_stateProfile"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Punjab"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_stateState"
                        android:layout_toEndOf="@+id/iv_stateProfile"
                        android:fontFamily="@font/poppins_medium"
                        android:text="160062"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/iv_stateProfile"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp10"
                        android:fontFamily="@font/poppins_medium"
                        android:text="49 Followers"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dp5"
                app:cardUseCompatPadding="true">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_cityHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Lucky Face in your city"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp18" />

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_cityProfile"
                        android:layout_width="@dimen/dp120"
                        android:layout_height="@dimen/dp120"
                        android:layout_below="@+id/tv_cityHead"
                        android:layout_margin="@dimen/dp10"
                        android:src="@drawable/profile" />

                <TextView
                        android:id="@+id/tv_cityUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_cityHead"
                        android:layout_marginTop="@dimen/dp25"
                        android:layout_toEndOf="@+id/iv_cityProfile"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Shubham"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />

                <TextView
                        android:id="@+id/tv_cityState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_cityUserName"
                        android:layout_toEndOf="@+id/iv_cityProfile"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Punjab"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_cityState"
                        android:layout_toEndOf="@+id/iv_cityProfile"
                        android:fontFamily="@font/poppins_medium"
                        android:text="160062"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/iv_cityProfile"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp10"
                        android:fontFamily="@font/poppins_medium"
                        android:text="49 Followers"
                        android:textColor="@color/blackTextColor"
                        android:textSize="@dimen/sp14" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>